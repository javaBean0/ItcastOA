<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.itcast.oa.domain">
    <class name="User" table="itcast_user">
        <id column="id" name="id">
            <generator class="native"></generator>
        </id>
        <property name="name"/>
        <property name="loginName"/>
        <property name="gender"></property>
        <property name="phoneNumber"></property>
        <property name="password"></property>
        <property name="email"></property>
        <property name="description"></property>

        <!--department属性， 本类与Department的多对一-->
        <many-to-one name="department" class="Department" column="departmentId" lazy="false"></many-to-one>
        <!--roles属性， 本类与Role的多对多-->
        <set name="roles" table="itcast_user_role" lazy="false">
            <key column="userId"></key>
            <many-to-many class="Role" column="roleId"></many-to-many>
        </set>

    </class>
</hibernate-mapping>